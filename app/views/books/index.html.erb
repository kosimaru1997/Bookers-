<div class="main">
<div class="title"><h1>Bookes</h1></div>

  <table class="table">
    <tr class="book-table">
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr class="contents">
        <th class="content"><%= book.title %></th>
        <th class="content"><%= book.body %></th>
        <th class="link">
          <%= link_to "Show", book_path(book) %>
          <%= link_to("Edit", "/books/#{book.id}/edit") %>
          <%= link_to("Destroy", "/books/#{book.id}", method: :delete, data: {confirm: "Are you sureï¼Ÿ"})  %>
        </th>
    </tr>
    <% end %>
  </table>
  
  <div class="new">
    <h1>New Book</h1>
    
    <div class="post-form">
    
   <% if @book.errors.any? %>
    <div class="alert">
      <div class="alert-message">
        <% if @book.errors.count >= 2 %>
         <h3><%= @book.errors.count %> errors prohibited this book from being saved:<h3>
        <% else %>
         <h3><%= @book.errors.count %> error prohibited this book from being saved:<h3>
        <% end %>
      </div>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
   <% end %>

    <%= form_with model: @book, url:"/books", local: true do |f| %>
    
       <h4>Title</h4>
       <%= f.text_field :title, :size=>"25" %>
       
       <h4>Body</h4>
       <%= f.text_area :body, :size=>"27x3" %>
       <div class="btn">
       <%= f.submit "Create Book" %>
       </div>
      <% end %> 
    </div>
  </div>
  

</div>