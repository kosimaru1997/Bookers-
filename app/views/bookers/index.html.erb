<div class="main">
<div class="title"><h1>Bookes</h1></div>

  <table class="table">
    <tr class="book-table">
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr class="contents">
        <th class="content"><%= book.title %></th>
        <th class="content"><%= book.body %></th>
        <th class="link">
          <%= link_to("Show","/") %>
          <%= link_to("Edit","/") %>
          <%= link_to("Destroy","/") %>
        </th>
    </tr>
    <% end %>
  </table>
  
  <div class="new">
    <h1>New Book</h1>
    
    <div class="post-form">
    <%= form_with model:@book, local: true do |f| %>
      
       <h4>Title</h4>
       <%= f.text_field :title, :size=>"25" %>
       
       <h4>Body</h4>
       <%= f.text_area :body, :size=>"27x3" %>
       <div class="btn">
       <%= f.submit "Create Book" %>
       </div>
      <% end %> 
    </div>
  </div>
  

</div>
