  <div class="new">
    <h1>Editing Book</h1>
    
    <div class="post-form">
    <%= form_with model: @book, url:"/bookers/#{@book.id}", local: true do |f| %>
      
       <h4>Title</h4>
       <%= f.text_field :title, :size=>"25" %>
       
       <h4>Body</h4>
       <%= f.text_area :body, :size=>"27x3" %>
       <div class="btn">
       <%= f.submit "Update Book" %>
       </div>
      <% end %> 
    </div>
  </div>
  
  <div>
  <%= link_to("Show","/bookers/#{@book.id}") %> | <%= link_to("Back", "/bookers") %>
</div>